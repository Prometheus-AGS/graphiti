{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI - Graph Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server.graph_service.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
